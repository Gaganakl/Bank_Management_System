<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="20" alignment="CENTER" xmlns:fx="http://javafx.com/fxml" fx:controller="controllers.UpdateCustomerController" stylesheets="/styles/styles.css">
    <Label text="Update Customer" styleClass="title"/>
    <GridPane hgap="10" vgap="10">
        <Label text="Name:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
        <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <TextField fx:id="emailField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
        <Label text="Position:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <TextField fx:id="positionField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
    </GridPane>
    <HBox spacing="10">
        <Button text="Update" onAction="#handleUpdate"/>
        <Button text="Cancel" onAction="#handleCancel"/>
    </HBox>
</VBox>
